%clean

CLIPROOT=%{DESTDIR}%{CLIPROOT} ./clean.sh

rm -rf %{DESTDIR}

%post

/usr/sbin/groupadd clip >/dev/null 2>&1 || true

CLIPROOT=%{CLIPROOT}
LOCALEDIRS="$CLIPROOT/locale.pot $CLIPROOT/locale.po $CLIPROOT/locale.mo"
chgrp -R clip $LOCALEDIRS || true
chmod -R g+w $LOCALEDIRS || true

%post -n clip-lib

